<h1>My Events</h1>

{{#if organizedEvents}}
    <h2>Organized Events</h2>
    {{#each organizedEvents}}
        <h3>{{name}}</h3>
        </article>
        <p>{{description}}</p>
        <p>Court : {{court.name}}</p>
        <p>Organizer: {{organizer.username}}</p>
        <div>
            <h4>players</h4>
                {{#each players}}
                    <p>{{username}}</p>
                {{/each}}
        </div>
    {{/each}}
{{/if}}

